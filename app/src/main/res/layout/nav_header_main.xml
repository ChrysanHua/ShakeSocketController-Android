<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/bg_side_nav_bar_off"
    android:gravity="bottom"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <TextView
        android:id="@+id/nav_header_ctrl_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:paddingStart="0dp"
        android:paddingEnd="1dp"
        android:text="@string/txt_text_view" />

    <TextView
        android:id="@+id/nav_header_ctrl_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/nav_header_ctrl_count"
        android:layout_toEndOf="@id/nav_header_ctrl_count"
        android:text="@string/txt_text_view" />

    <TextView
        android:id="@+id/nav_header_device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/nav_header_ctrl_count"
        android:layout_alignParentStart="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingStart="0dp"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:paddingEnd="6dp"
        android:text="@string/txt_text_view"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/nav_header_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/nav_header_device_name"
        android:layout_toEndOf="@id/nav_header_device_name"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="@string/txt_text_view"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <ImageView
        android:id="@+id/nav_header_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/nav_header_device_name"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/nav_header_img_desc"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        app:srcCompat="@mipmap/ic_launcher_round" />

</RelativeLayout>
