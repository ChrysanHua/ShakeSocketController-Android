<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="@dimen/dividing_line_horizontal_padding"
    android:paddingEnd="@dimen/dividing_line_horizontal_padding">

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="#000"
        android:backgroundTint="?android:attr/textColorSecondary" />

    <TextView
        android:id="@+id/dividing_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingStart="@dimen/dividing_text_horizontal_padding"
        android:paddingEnd="@dimen/dividing_text_horizontal_padding"
        android:text="@string/txt_text_view"
        android:textSize="16sp" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="#000"
        android:backgroundTint="?android:attr/textColorSecondary" />

</LinearLayout>