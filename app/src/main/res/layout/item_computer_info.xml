<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:checkable="true"
    app:cardCornerRadius="4dp"
    app:checkedIcon="@drawable/ic_ssc_switch"
    app:checkedIconTint="@color/selector_card_view_checked_icon_enabled">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/computer_info_nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingVertical="@dimen/card_view_primary_vertical_padding"
            android:paddingStart="@dimen/card_view_content_start_padding"
            android:paddingEnd="1dp"
            android:text="@string/txt_text_view"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="@dimen/card_view_primary_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/computer_info_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/computer_info_nick_name"
            android:layout_toEndOf="@id/computer_info_nick_name"
            android:paddingVertical="@dimen/card_view_primary_vertical_padding"
            android:text="@string/txt_text_view"
            android:textSize="@dimen/card_view_primary_notes_text_size" />

        <TextView
            android:id="@+id/computer_info_ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/computer_info_nick_name"
            android:layout_alignStart="@id/computer_info_nick_name"
            android:paddingStart="@dimen/card_view_content_start_padding"
            android:paddingEnd="4dp"
            android:paddingBottom="@dimen/card_view_content_bottom_padding"
            android:text="@string/txt_text_view"
            android:textSize="@dimen/card_view_secondary_text_size" />

        <TextView
            android:id="@+id/computer_info_device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/computer_info_nick_name"
            android:layout_toEndOf="@id/computer_info_ip"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingBottom="@dimen/card_view_content_bottom_padding"
            android:text="@string/txt_text_view"
            android:textSize="@dimen/card_view_secondary_text_size" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>